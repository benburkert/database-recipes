global
  daemon
  maxconn       4096
  nbproc        1

defaults
  mode              http
  timeout client    10s
  srvtimeout        3s
  timeout connect   20ms

  option            httpclose
  option            abortonclose
  option            httpchk
  option            forwardfor


  balance roundrobin

  stats enable
  stats auth        <%= @user %>:<%= @password %>
  stats refresh     5s

  listen <%= @application %>_proxy 127.0.0.1:<%= @upstream_port %>
  <% for port in @ports %>
    server <%= @application %>_<%= port %> 127.0.0.1:<%= port %> weight 1 maxconn 1 check
  <% end %>
